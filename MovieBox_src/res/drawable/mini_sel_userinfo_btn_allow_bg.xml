<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/mini_dp_8" />
            <solid android:color="@color/mini_color_login_main_disable" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/mini_dp_4" />
            <solid android:color="@color/mini_color_login_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/mini_dp_4" />
            <solid android:color="@color/mini_color_login_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/mini_dp_4" />
            <solid android:color="@color/mini_color_login_main" />
        </shape>
    </item>
</selector>