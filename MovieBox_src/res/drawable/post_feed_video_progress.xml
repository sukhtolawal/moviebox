<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/white_20" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:clipChildren="true" android:scaleWidth="100%">
            <shape>
                <corners android:radius="3.0dip" />
                <gradient android:startColor="@color/brand_new_gradient_start" android:endColor="@color/brand_new_gradient_end" android:angle="0.0" android:centerColor="@color/brand_new_gradient_center" />
            </shape>
        </scale>
    </item>
</layer-list>