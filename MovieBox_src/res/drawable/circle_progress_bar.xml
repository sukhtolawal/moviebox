<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="oval" android:thickness="2.0dip">
            <stroke android:width="2.0dip" android:color="@color/border" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0">
            <shape android:shape="ring" android:innerRadiusRatio="2.35" android:useLevel="true" android:thickness="2.0dip">
                <gradient android:startColor="@color/main" android:endColor="@color/main" android:useLevel="true" android:angle="0.0" android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>